# Staging Environment Configuration

# ONVIF Camera Settings
ONVIF_HOST=192.168.1.100
ONVIF_PORT=8080
ONVIF_USERNAME=admin
ONVIF_PASSWORD=admin

# FFmpeg Settings
FFMPEG_BIN=/usr/bin/ffmpeg
FFPROBE_BIN=/usr/bin/ffprobe

# Application Settings
NEXT_PUBLIC_API_BASE=http://staging.broadcast.local:3000
NEXT_PUBLIC_SOCKET_URL=ws://staging.broadcast.local:3000
PORT=3000
NODE_ENV=production

# Streaming Output
RTMP_SERVER=rtmp://staging-server/live
RTSP_SERVER=rtsp://0.0.0.0:554
SRT_SERVER=srt://0.0.0.0:9710

# Logging
LOG_LEVEL=info
